{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}

{# Substitui o que está dentro do call pelo caller() #}
{% call cards.render("", "order-error container") %}
  <div class="success-lottie"></div>

  <h2>Desculpe</h2>
  <p>não podemos processar seu pedido</p>

  <a href="#" onclick="history.back()">Tente novamente</a>
  
{% endcall %} 

<script src='/lottie.min.js'></script>
<script>
  const element = document.querySelector('.error-lottie');

  lottie.loadAnimation({
    container: element, // the dom element that will contain the animation
    renderer: 'svg',
    loop: false,
    autoplay: true,
    path: '/9915-spinner-fail.json' // the path to the animation json
  }).setSpeed(2.5);  
</script>

{% endblock content %} 