{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

{% call card.render('Esqueceu a senha?', 'password container') %}
  <form method="POST" action='/users/forgot-password'>
    <div class="fields">
      <div class="item">
        <div class="">Email</div>
        <div class="input">
          <input 
            type="email" 
            name="email" 
            placeholder="Digite o email cadastrado"
            value="{{user.email}}"
            {# Quando ele sair do campo --> onblur #}
            onblur="Validate.apply(this, 'isEmail')"
          >
        </div>
      </div>
    </div>

    <button class="button" type="submit">Recuperar senha</button>
  </form>
{% endcall %}

{% endblock content %}