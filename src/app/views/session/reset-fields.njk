<div class="item">
    <div class="">Email</div>
    <div class="input">
      <input 
        type="email" 
        name="email" 
        placeholder="Digite seu email"
        value="{{user.email}}"
        {# Quando ele sair do campo --> onblur #}
        onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div class="">Senha</div>
    <div class="input">
      <input 
        type="password" 
        name="password" 
          placeholder="Digite a nova senha."
      >
    </div>
</div>

<div class="item">
    <div class="">Repetir senha</div>
    <div class="input">
      <input 
        type="password" 
        name="passwordRepeat" 
          placeholder="Repita a nova senha."
      >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">