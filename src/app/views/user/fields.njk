<div class="item">
    <div class="">Nome Completo</div>
    <div class="input">
      <input 
        type="text" 
        name="name" 
        placeholder="Digite seu nome completo" 
        value="{{user.name}}"
        required>
    </div>
</div>

<div class="item">
    <div class="">Email</div>
    <div class="input">
      <input 
        type="email" 
        name="email" 
        placeholder="Digite seu email" 
        value="{{user.email}}"
        {# Quando ele sair do campo --> onblur #}
        onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div class="">Senha</div>
    <div class="input">
      <input 
        type="password" 
        name="password" 
        placeholder="Escolha uma senha." 
      >
    </div>
</div>


{% if not user.id %}
  <div class="item">
    <div class="">Senha</div>
    <div class="input">
      <input 
        type="password" 
        name="passwordRepeat" 
        placeholder="Repita a senha." 
      >
    </div>
  </div>
{% endif %}

<div class="item">
    <div class="">CPF ou CNPJ</div>
    <div class="input">
      <input 
        type="text" 
        name="cpf_cnpj" 
        placeholder="Digite o documento." 
        value="{{user.cpf_cnpj}}"
        onkeydown="Mask.apply(this, 'cpfCnpj')"
        onblur="Validate.apply(this, 'isCpfCnpj')"
      >
    </div>
</div>

<div class="item">
    <div class="">CEP</div>
    <div class="input">
      <input 
        type="text" 
        name="cep" 
        placeholder="00000-000" 
        value="{{user.cep}}"
        onkeydown="Mask.apply(this, 'cep')"
        onblur="Validate.apply(this, 'isCep')"
      >
    </div>
</div>

<div class="item">
    <div class="">Endereço completo</div>
    <div class="input">
      <input 
        type="text" 
        name="address" 
        placeholder="Digite seu endereço completo." 
        value="{{user.address}}"
      >
    </div>
</div>